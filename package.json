{
  "name": "simple-react-components",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "clean:ladle": "rimraf --glob .ladle/*.css .ladle/*.css.map && type nul > .ladle/bootstrap.css && type nul > .ladle/tailwind.css && type nul > .ladle/vanilla.css",
    "bootstrap:watch": "sass --watch ./src/assets/styles/bootstrap.scss ./.ladle/bootstrap.css --no-source-map",
    "bootstrap:build": "sass ./src/assets/styles/bootstrap.scss ./.ladle/bootstrap.css --no-source-map",
    "ladle-bootstrap": "npm run clean:ladle && npm run bootstrap:build && concurrently \"npm run bootstrap:watch\" \"ladle serve --port 8000\"",
    "ladle-bootstrap:build": "npm run clean:ladle && npm run bootstrap:build && ladle build",
    "tailwind:watch": "tailwindcss -i ./src/assets/styles/tailwind.css -o ./.ladle/tailwind.css --watch",
    "tailwind:build": "tailwindcss -i ./src/assets/styles/tailwind.css -o ./.ladle/tailwind.css --minify",
    "ladle-tailwind": "npm run clean:ladle && npm run tailwind:build && concurrently \"npm run tailwind:watch\" \"ladle serve --port 8000\"",
    "ladle-tailwind:build": "npm run clean:ladle && npm run tailwind:build && ladle build",
    "ladle-vanilla": "npm run clean:ladle && concurrently \"ladle serve --port 8000\"",
    "ladle-vanilla:build": "npm run clean:ladle && ladle build",
    "ladle": "node scripts/start-ladle.js",
    "ladle:build": "node scripts/build-ladle.js",
    "ladle:preview": "ladle preview"
  },
  "dependencies": {
    "@ladle/react": "^5.0.3",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "bootstrap": "^5.3.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.6.0",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react-syntax-highlighter": "^15.6.1",
    "rimraf": "^6.0.1",
    "sass": "^1.89.2",
    "tailwind-merge": "^3.3.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.3",
    "vite-plugin-svgr": "^4.3.0"
  }
}
